@{ Layout = "../Shared/_Layout.cshtml"; }

<div class="card-box">

  <div class="btn-toolbar btn-group btn-group-sm mb-2">
    <button v-on:click="btnAddClick" v-if="permissions.isAdd" class="btn btn-rounded bg-light text-black">
      <i class="fa fa-plus"></i>
      添加
    </button>
    <button v-on:click="btnFuncClick({title: '导入Word', name: 'Word', withoutContents: true, full: true})" v-if="permissions.isAdd"
      class="btn btn-rounded bg-light text-sm">
      <i class="fa fa-file"></i>
      导入Word
    </button>
    <button v-if="permissions.isAdd" class="btn btn-rounded bg-light text-black">
      <i class="fa fa-upload"></i>
      导入文件
    </button>
    <button v-if="permissions.isChannelEdit" class="btn btn-rounded bg-light text-black" onclick="$.layer({type: 2, maxmin: true, shadeClose: true, title: '设置显示项', shade: [0.1,'#fff'], iframe: {src: '/SiteServer/cms/modalselectcolumns.aspx?siteId=35&channelId=6136'}, area: [($(window).width() - 50) +'px', ($(window).height() - 50) +'px'], offset: ['25px', '25px']});return false;">
      <i class="fa fa-columns"></i>
      显 示
    </button>

    <button v-if="count > 0" class="btn btn-rounded bg-light text-black">
      <i class="fa fa-download"></i>
      导 出
    </button>
    <button v-if="count > 0 && permissions.isEdit" class="btn btn-rounded bg-light text-black">
      <i class="fa fa-list-ol"></i>
      整 理
    </button>
  </div>

  <div v-if="count > 0" class="row form-inline mb-2">
    <div class="col-8 btn-toolbar btn-group btn-group-sm">
      <button v-on:click="btnFuncClick({title: '删除', name: 'Delete'})" v-if="selectedContentIds.length > 0 && permissions.isDelete"
        class="btn btn-rounded bg-light text-black">
        <i class="fa fa-trash"></i>
        删 除
      </button>
      <button v-on:click="btnFuncClick({title: '设置属性', name: 'Attributes', width: 450, height: 320})" v-if="selectedContentIds.length > 0 && permissions.isEdit"
        class="btn btn-rounded bg-light text-black">
        <i class="fa fa-flag"></i>
        属 性
      </button>
      <button v-on:click="btnFuncClick({title: '设置组别', name: 'Group'})" v-if="selectedContentIds.length > 0 && permissions.isEdit"
        v-if="selectedContentIds.length > 0" class="btn btn-rounded bg-light text-black">
        <i class="ion-android-checkbox-outline"></i>
        内容组
      </button>
      <button v-on:click="btnFuncClick({title: '转移', name: 'Translate', redirect: true})" v-if="selectedContentIds.length > 0 && permissions.isTranslate"
        class="btn btn-rounded bg-light text-black">
        <i class="fa fa-exchange"></i>
        转 移
      </button>
      <button v-on:click="btnFuncClick({title: '排序', name: 'Taxis', width: 450, height: 280})" v-if="selectedContentIds.length > 0 && permissions.isEdit"
        class="btn btn-rounded bg-light text-black">
        <i class="fa fa-sort"></i>
        排 序
      </button>
      <button v-on:click="btnFuncClick({title: '审核', name: 'Check', full: true})" v-if="selectedContentIds.length > 0 && permissions.isCheck"
        class="btn btn-rounded bg-light text-black">
        <i class="fa fa-check"></i>
        审 核
      </button>
      <button v-on:click="btnCreateClick" v-if="selectedContentIds.length > 0 && permissions.isCreate" class="btn btn-rounded bg-light text-black">
        <i class="ion-wand"></i>
        生 成
      </button>
    </div>
    <div class="col-4 text-right">
      搜索：<input type="search" class="form-control form-control-sm inline">
    </div>
  </div>

  <div v-if="pageAlert" class="alert" v-bind:class="{ 'alert-warning': pageAlert.type === 'warning', 'alert-success': pageAlert.type === 'success', 'alert-danger': pageAlert.type === 'danger' }">
    <button v-on:click="pageAlert = null" class="close" data-dismiss="alert">×</button>
    <span v-html="pageAlert.html"></span>
  </div>

  <table class="table tablesaw table-bordered table-hover mt-1">
    <thead>
      <tr>
        <th>内容标题(点击查看) </th>
        <th class="text-nowrap">外部链接</th>
        <th class="text-nowrap">添加时间</th>
        <th class="text-center text-nowrap">操作</th>
        <th class="text-center text-nowrap">状态</th>
        <th class="text-nowrap checkbox checkbox-primary">
          <input id="all" v-on:click="selectAll()" v-model="isAllChecked" type="checkbox">
          <label for="all"></label>
        </th>
      </tr>
    </thead>
    <tbody>
      <tr v-for="content in pageContents" v-on:click="toggleChecked(content)" :class="{'table-warning': content.isSelected}">
        <td v-html="content.title"></td>
        <td>{{ content.navigationUrl }}</td>
        <td class="text-center text-nowrap">{{ content.addDate }}</td>
        <td class="text-center text-nowrap">
          <a :href="'pageContentAdd.aspx?siteId=' + siteId + '&channelId=' + channelId + '&id=' + content.id">编辑</a>
        </td>
        <td class="text-center text-nowrap">
          <a href="javascript:;" title="设置内容状态" onclick="$.layer({type: 2, maxmin: true, shadeClose: true, title: '审核状态', shade: [0.1,'#fff'], iframe: {src: '/SiteServer/cms/modalcheckstate.aspx?siteId=35&channelId=6136&contentID=298418&returnUrl=%2fSiteServer%2fcms%2fpagecontent.aspx_question_siteId_equals_35_and_channelId_equals_6136_and_dateFrom_equals__and_searchType_equals__and_keyword_equals__and_page_equals_1'}, area: ['560px', '500px'], offset: ['', '']});return false;"
            v-html="content.checkState"></a>
        </td>
        <td class="text-nowrap checkbox checkbox-primary">
          <input :id="'checkbox' + content.id" v-model="content.isSelected" type="checkbox">
          <label :for="'checkbox' + content.id"></label>
        </td>
      </tr>
    </tbody>
  </table>

  <hr />

  <div class="row">
    <div class="col-9">
      <ul class="pagination pagination-sm float-left">
        <li class="page-item" :class="{disabled : page === 1}">
          <a class="page-link" v-on:click="loadFirstPage" :class="{'bg-light' : page === 1}" href="javascript:;">首 页</a>
        </li>
        <li class="page-item" :class="{disabled : page === 1}">
          <a class="page-link" v-on:click="loadPrevPage" :class="{'bg-light' : page === 1}" href="javascript:;">上一页</a>
        </li>
        <li class="page-item" :class="{disabled : page === pages}">
          <a class="page-link" v-on:click="loadNextPage" :class="{'bg-light' : page === pages}" href="javascript:;">下一页</a>
        </li>
        <li class="page-item" :class="{disabled : page === pages}">
          <a class="page-link" v-on:click="loadLastPage" :class="{'bg-light' : page === pages}" href="javascript:;">末
            页</a>
        </li>
      </ul>
    </div>
    <div class="col-3">
      <multiselect v-on:select="onPageSelect" v-model="page" placeholder="Select one" :options="pageOptions"
        :searchable="false" :show-labels="false">
        <template slot="singleLabel" slot-scope="{ option }">第 {{ option }} 页</template>
        <template slot="option" slot-scope="props">
          第 {{ props.option }} 页
        </template>
      </multiselect>
    </div>
  </div>

</div>

@section Scripts{
<script src="../assets/js/vue-multiselect-2.1.0.min.js"></script>
<link rel="stylesheet" href="../assets/js/vue-multiselect-2.1.0.min.css">
<script src="contents.js" type="text/javascript"></script> }