@{ Layout = "../Shared/_LayoutLayer.cshtml"; }

<div class="form-group form-row">
  <label class="col-3 text-right col-form-label">名称</label>
  <h6 class="col-5 text-left">
    {{ tokenInfo && tokenInfo.title }}
  </h6>
  <div class="col-4 help-block"></div>
</div>

<div class="form-group form-row">
  <label class="col-3 text-right col-form-label">API密钥</label>
  <div class="col-5 form-control-plaintext">
    <code style="font-size: 16px">
      {{ accessToken }}
    </code>
  </div>
  <div class="col-4 help-block">
    <button v-on:click="btnRegenerateClick" class="btn btn-success m-l-5">重 设</button>
  </div>
</div>

<div class="form-group form-row">
  <label class="col-3 text-right col-form-label">添加时间</label>
  <h6 class="col-5 text-left">
    {{ tokenInfo && tokenInfo.addDate }}
  </h6>
  <div class="col-4 help-block"></div>
</div>

<div class="form-group form-row">
  <label class="col-3 text-right col-form-label">更新时间</label>
  <h6 class="col-5 text-left">
    {{ tokenInfo && tokenInfo.updatedDate }}
  </h6>
  <div class="col-4 help-block"></div>
</div>

<hr />

<div class="text-right mr-1">
  <button type="button" v-on:click="btnCancelClick" class="btn btn-default m-l-5">关 闭</button>
</div>

@section Scripts{
<script src="adminAccessTokensViewLayer.js" type="text/javascript"></script> }